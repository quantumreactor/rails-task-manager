<h1>My tasks</h1>
<p></p>
<%= Date.today %>
<ul>
<%  @tasks.each do |task| %>
<li><%= task.completed ? "✅" : "🔲" %> - <%= link_to task.title, task_path(task) %> - <%= link_to "✏️", edit_task_path(task) %> - <%= link_to "🗑️", task_path(task), method: :delete, data: { confirm: "Seguroski?"} %></li>

<% end %>

</ul>
<p><%= link_to 'Add a new task', new_task_path%></p>